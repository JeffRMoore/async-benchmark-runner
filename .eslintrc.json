{
    "env": {
      "node": true,
      "es6" : true,
      "jest" : true
    },
    "extends": ["airbnb", "plugin:flowtype/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
    "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "flowtype"
    ],
    "rules": {
      "comma-dangle": "off",
      "no-plusplus": "off",
      "no-use-before-define": "off",
      "no-continue": "off",
      "no-console": "off",
      "import/prefer-default-export": "off",
      "no-param-reassign" : ["error", { "props": false }]
    }
}